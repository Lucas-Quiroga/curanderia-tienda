---
import { SlMagicWand } from "react-icons/sl";
import { DATA_TIENDA } from "@/constants/const";
---

<aside
  class="w-full lg:flex-none lg:w-64 p-6 bg-white dark:bg-gray-950 dark:border-r dark:border-white"
>
  <div class="flex items-center space-x-2 mb-6">
    <span class="text-lg font-semibold dark:text-white"
      >{DATA_TIENDA.header.title}
    </span>
    <SlMagicWand className="dark:text-white" />
  </div>
  <nav class="space-y-10">
    <a
      class="flex items-center space-x-2 p-2 rounded-md text-gray-700 bg-gray-200 hover:bg-gray-300 dark:bg-gray-100 dark:text-black dark:hover:bg-gray-700 dark:hover:text-white"
      href="/"
    >
      <svg
        class="h-4 w-4"
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
        <polyline points="9 22 9 12 15 12 15 22"></polyline>
      </svg>
      <span>Inicio</span>
    </a>

    <div>
      <p class="text-xs font-semibold text-gray-500 uppercase mb-2">Ayuda</p>

      <a
        class="block text-gray-700 hover:text-blue-500 mb-1 dark:text-gray-300 dark:hover:text-blue-400"
        href="/preguntas"
      >
        Preguntas frecuentes
      </a>
    </div>
  </nav>
</aside>
