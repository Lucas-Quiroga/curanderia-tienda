---
import { Button } from "@/components/ui/button";

type Local = {
  emailUser?: string;
};

const data: Local = Astro.locals;
---

<header
  class="flex flex-col h-auto sm:h-16 sm:flex-row items-center justify-between border-b bg-white px-6 dark:border-gray-800 dark:bg-gray-950"
>
  <nav class="flex flex-col sm:flex-row items-center sm:gap-6">
    {
      routes.map((route) => (
        <a href={route.href} class="text-gray-500 hover:text-gray-900">
          {route.name}
        </a>
      ))
    }
  </nav>
  <div class="flex flex-col sm:flex-row items-center sm:gap-4">
    <div class="flex items-center gap-2">
      <span class="text-gray-500">Bienvenido {data.emailUser}</span>
    </div>
    <Button variant="ghost" size="icon" className="rounded-full" id="btnLogout">
      salir
    </Button>
  </div>
</header>

<script src="/src/scripts/navbarAdmin.script.ts"></script>
